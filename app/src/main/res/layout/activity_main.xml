<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back_loot"
    android:scaleType="centerCrop">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loot Bitume"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="60dp"
        android:fontFamily="@font/font_crackhouse"
        android:padding="20dp"
        android:id="@+id/lootTitle"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lootTitle"
        android:padding="30dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meuble"
            android:fontFamily="@font/font_gorrisans"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/brown"
            android:id="@+id/env1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pièce"
            android:fontFamily="@font/font_gorrisans"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/brown"
            android:id="@+id/env2"
            android:layout_below="@id/env1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bâtiment"
            android:fontFamily="@font/font_gorrisans"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/brown"
            android:id="@+id/env3"
            android:layout_below="@+id/env2"/>
    </RelativeLayout>



</RelativeLayout>